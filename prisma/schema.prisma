generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Unidade {
  id              String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  numero          String           @unique @db.VarChar(50)
  temDireitoVaga  Boolean          @default(false) @map("tem_direito_vaga")
  createdAt       DateTime?        @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime?        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  users           Usuario[]
  usuarioUnidades UsuarioUnidade[]
  votos           Voto[]
  vaga            Vaga?
  vagasAlugadas   Vaga[]           @relation("VagasAlugadas")
  veiculos        Veiculo[]
  moradores       Morador[]

  @@map("unidades")
}

model Usuario {
  id               String           @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email            String           @unique @db.VarChar(255)
  passwordHash     String           @map("password_hash")
  nome             String           @db.VarChar(255)
  telefone         String?          @db.VarChar(20)
  perfil           PerfilUsuario    @default(morador)
  unidadeId        String?          @map("unidade_id") @db.Uuid
  forcarTrocaSenha Boolean          @default(false) @map("forcar_troca_senha")
  createdAt        DateTime?        @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime?        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  unidade          Unidade?         @relation(fields: [unidadeId], references: [id], onUpdate: NoAction)
  usuarioUnidades  UsuarioUnidade[]
  votacoesCriadas  Votacao[]        @relation("VotacoesCriadas")
  votos            Voto[]

  @@index([email], map: "idx_users_email")
  @@index([unidadeId], map: "idx_users_unidade_id")
  @@map("users")
}

model Votacao {
  id                  String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  titulo              String         @db.VarChar(255)
  descricao           String?
  tipo                TipoVotacao
  modoAuditoria       ModoAuditoria  @default(anonimo) @map("modo_auditoria")
  mostrarParcial      Boolean        @default(false) @map("mostrar_parcial")
  permitirAlterarVoto Boolean        @default(true) @map("permitir_alterar_voto")
  criadoPor           String         @map("criado_por") @db.Uuid
  dataInicio          DateTime       @map("data_inicio") @db.Timestamptz(6)
  dataFim             DateTime       @map("data_fim") @db.Timestamptz(6)
  status              StatusVotacao  @default(rascunho)
  createdAt           DateTime?      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt           DateTime?      @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  opcoes              OpcaoVotacao[]
  criadoPorUser       Usuario        @relation("VotacoesCriadas", fields: [criadoPor], references: [id], onUpdate: NoAction)
  votos               Voto[]

  @@index([status], map: "idx_votacoes_status")
  @@index([criadoPor], map: "idx_votacoes_criado_por")
  @@map("votacoes")
}

model OpcaoVotacao {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  votacaoId String    @map("votacao_id") @db.Uuid
  texto     String    @db.VarChar(500)
  ordem     Int       @default(0)
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  votacao   Votacao   @relation(fields: [votacaoId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  votos     Voto[]    @relation("VotoOpcao")

  @@index([votacaoId], map: "idx_opcoes_votacao_votacao_id")
  @@map("opcoes_votacao")
}

model Voto {
  id        String        @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  votacaoId String        @map("votacao_id") @db.Uuid
  unidadeId String        @map("unidade_id") @db.Uuid
  opcaoId   String?       @map("opcao_id") @db.Uuid
  opcoesIds Json?         @map("opcoes_ids")
  userId    String?       @map("user_id") @db.Uuid
  createdAt DateTime?     @default(now()) @map("created_at") @db.Timestamptz(6)
  opcao     OpcaoVotacao? @relation("VotoOpcao", fields: [opcaoId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  unidade   Unidade       @relation(fields: [unidadeId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user      Usuario?      @relation(fields: [userId], references: [id], onUpdate: NoAction)
  votacao   Votacao       @relation(fields: [votacaoId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([votacaoId, unidadeId])
  @@index([votacaoId], map: "idx_votos_votacao_id")
  @@index([unidadeId], map: "idx_votos_unidade_id")
  @@index([userId], map: "idx_votos_user_id")
  @@map("votos")
}

enum PerfilUsuario {
  staff
  conselho
  auditor
  morador

  @@map("perfil_usuario")
}

enum TipoVotacao {
  escolha_unica
  multipla_escolha

  @@map("tipo_votacao")
}

enum ModoAuditoria {
  anonimo
  rastreado

  @@map("modo_auditoria")
}

enum StatusVotacao {
  rascunho
  aberta
  encerrada

  @@map("status_votacao")
}

model UsuarioUnidade {
  id        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  usuarioId String    @map("usuario_id") @db.Uuid
  unidadeId String    @map("unidade_id") @db.Uuid
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  usuario   Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  unidade   Unidade   @relation(fields: [unidadeId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([usuarioId, unidadeId])
  @@index([usuarioId], map: "idx_usuario_unidades_usuario_id")
  @@index([unidadeId], map: "idx_usuario_unidades_unidade_id")
  @@map("usuario_unidades")
}

model Vaga {
  id               String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  unidadeId        String    @unique @map("unidade_id") @db.Uuid
  estaAlugada      Boolean   @default(false) @map("esta_alugada")
  unidadeAlugadaId String?   @map("unidade_alugada_id") @db.Uuid
  createdAt        DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime? @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  unidade          Unidade   @relation(fields: [unidadeId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  unidadeAlugada   Unidade?  @relation("VagasAlugadas", fields: [unidadeAlugadaId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  veiculos         Veiculo[]

  @@index([unidadeId], map: "idx_vagas_unidade_id")
  @@index([unidadeAlugadaId], map: "idx_vagas_unidade_alugada_id")
  @@map("vagas")
}

model Veiculo {
  id        String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  unidadeId String      @map("unidade_id") @db.Uuid
  vagaId    String?     @map("vaga_id") @db.Uuid
  placa     String      @unique @db.VarChar(10)
  modelo    String      @db.VarChar(100)
  marca     String      @db.VarChar(100)
  tipo      TipoVeiculo
  createdAt DateTime?   @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime?   @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  unidade   Unidade     @relation(fields: [unidadeId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  vaga      Vaga?       @relation(fields: [vagaId], references: [id], onDelete: SetNull, onUpdate: NoAction)

  @@index([unidadeId], map: "idx_veiculos_unidade_id")
  @@index([vagaId], map: "idx_veiculos_vaga_id")
  @@index([placa], map: "idx_veiculos_placa")
  @@map("veiculos")
}

enum TipoVeiculo {
  carro
  moto

  @@map("tipo_veiculo")
}

model Morador {
  id             String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  unidadeId      String         @map("unidade_id") @db.Uuid
  nome           String         @db.VarChar(255)
  documento      String         @unique @db.VarChar(20)
  grauParentesco GrauParentesco @map("grau_parentesco")
  createdAt      DateTime?      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime?      @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  unidade        Unidade        @relation(fields: [unidadeId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([unidadeId], map: "idx_moradores_unidade_id")
  @@index([documento], map: "idx_moradores_documento")
  @@map("moradores")
}

enum GrauParentesco {
  Conjuge
  Filho
  Pai
  Mae
  Outro

  @@map("grau_parentesco")
}
